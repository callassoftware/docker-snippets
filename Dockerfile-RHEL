FROM redhat/ubi9

RUN yum update -y && \
    yum install -y procps fontconfig which libfontenc glibc-gconv-extra dejavu-sans-fonts dejavu-sans-mono-fonts dejavu-serif-fonts


# optional - install microsoft truetype fonts ...
